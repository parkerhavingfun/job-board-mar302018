<%= link_to listing, class: "list-group-item list-group-item-action flex-column align-items-start active" do %>
    <span class="badge badge-primary badge-pill">Posted <%= time_ago_in_words listing.created_at %> ago</span>
                  <div class="d-flex w-100 justify-content-between">
                    <h4 class="mb-1"><%= listing.title %></h4>
                    <small><%= listing.location %></small>
                  </div>
                  <p class="mb-1"><%= listing.overview %></p>
                  <small><%= listing.remote? %></small>
                  
                  
<% end %>
